    </section>
    <section class="container" id="reviews2">
        <div class="col-sm-offset-1 col-md-offset-2 col-lg-offset-2">
            <div class="horizontal-slider text-center col-md-8 col-sm-10 col-xs-12">
                <div class="items text-left">
                    <% var reviews2Photo = ["male.png", "female.png", "male2.png"]; %>
                    <% reviews2Photo.forEach(function(item){ %>

                    <div class="item">
                        <div class="col-xs-12 col-sm-4 col-lg-3 text-center">
                            <img style="" src="img/characters/<%= item %>" height="128px" width="128px"/>
